{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"], 
  "exclude": ["node_modules"], 
}
